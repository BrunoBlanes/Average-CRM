@page

@model LoginModel;

@{
	ViewData["Title"] = "Log in";
}

<div class="content">
	<section class="form-section">
		<form id="account" method="post">
			<h1>Use a local account to log in</h4>

			<div class="form-line">
				<fluent-text-field asp-for="Email" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>

			<div class="form-line">
				<fluent-text-field asp-for="Password" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>

			<div class="form-line">
				<fluent-checkbox asp-for="RememberMe">
					@Html.DisplayNameFor(model => model.RememberMe)
				</fluent-checkbox>
			</div>

			<div class="form-line">
				<fluent-button appearance="Accent" type="submit">Log in</fluent-button>
			</div>

			<div class="form-line">
				<p>
					<a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
				</p>

				<p>
					<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
				</p>

				<p>
					<a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
				</p>
			</div>
		</form>
	</section>
</div>

<script>
	Functions.StopScroll('main');
</script>