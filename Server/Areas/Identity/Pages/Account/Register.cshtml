@page

@model RegisterModel
@{
	ViewData["Title"] = "Register";
}

<div class="content">
	<section class="form-section">
		<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
			<h1>Create a new account.</h4>

			<div class="form-line">
				<fluent-text-field asp-for="Email" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>

			<div class="form-line">
				<fluent-text-field asp-for="CPF" onkeydown="FormatCPF()" />
				<span asp-validation-for="CPF" class="text-danger"></span>
			</div>

			<div class="form-line">
				<fluent-text-field asp-for="Password" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>

			<div class="form-line">
				<fluent-text-field asp-for="ConfirmPassword" />
				<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
			</div>

			<div class="form-line">
				<fluent-button appearance="Accent" type="submit">Register</fluent-button>
			</div>
		</form>
	</section>
</div>