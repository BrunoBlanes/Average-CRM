@page

@model SetupModel

@{
	ViewData["Title"] = "Setup";
}

<div class="content">
	<section class="form-section">
		<form asp-controller="EmailSettings" method="post">
			<h1>Setup your email server</h4>

			<div class="form-line">
				<fluent-text-field asp-for="Settings.Name" />
				<span asp-validation-for="Settings.Name" class="text-danger"></span>
			</div>

			<div class="form-line">
				<fluent-text-field asp-for="Settings.Address" />
				<span asp-validation-for="Settings.Address" class="text-danger"></span>
			</div>

			<div class="form-line">
				<div class="form-line-cell">
					<fluent-text-field asp-for="Settings.Server" style="width: 188px;" />
					<span asp-validation-for="Settings.Server" class="text-danger"></span>
				</div>
				
				<div class="form-line-cell">
					<fluent-text-field asp-for="Settings.Port" style="width: 94px;" />
					<span asp-validation-for="Settings.Port" class="text-danger"></span>
				</div>
			</div>

			<div class="form-line">
				<label asp-for="Settings.SecureSocket"></label>
				<select asp-for="Settings.SecureSocket" asp-items="Html.GetEnumSelectList<SecureSocket>()"></select>
				<span asp-validation-for="Settings.SecureSocket" class="text-danger"></span>
			</div>

			<div class="form-line">
				<fluent-text-field asp-for="Settings.Login" />
				<span asp-validation-for="Settings.Login" class="text-danger"></span>
			</div>

			<div class="form-line">
				<fluent-text-field asp-for="Settings.Password" />
				<span asp-validation-for="Settings.Password" class="text-danger"></span>
			</div>

			<div class="form-line">
				<fluent-button appearance="Accent" style="margin: 0px 6px 6px 0px;" type="submit">Save</fluent-button>
			</div>
		</form>
	</section>
</div>