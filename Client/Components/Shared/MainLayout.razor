@inherits LayoutComponentBase;

@inject IJSRuntime JSRuntime;

<div class="header">

</div>

<div class="col-3 col-s-3" style="max-width: 255px">
	<NavigationPane Name="NavigationPane" NavigationItems="@navigationItems" />
</div>

<div class="col-9 col-s-9">
	<div class="main">
		@Body
	</div>
</div>

@code{
	private Dictionary<string, object> navigationItems = new Dictionary<string, object>()
	{
		{ "Home", "/" },
		{ "Contatos", "contacts" },
		{ "Produtos", "products" },
		{ "Clientes", "clients" },
	};

	protected override async Task OnAfterRenderAsync(bool firstRender)
	{
		if (firstRender)
		{
			await JSRuntime.InvokeVoidAsync("loadFluentTheme");
		}
	}
}