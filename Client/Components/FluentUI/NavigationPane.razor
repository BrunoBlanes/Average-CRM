@inject IJSRuntime JSRuntime;

<div id="@Name" />

@code {
	[Parameter]
	public string Name { get; set; } = string.Empty;

	[Parameter]
	public string Title { get; set; } = string.Empty;

	[Parameter]
	public Dictionary<string, object> NavigationItems { get; set; } = new Dictionary<string, object>();

	protected override async Task OnAfterRenderAsync(bool firstRender)
	{
		if (firstRender)
		{
			await JSRuntime.InvokeVoidAsync("JsFunctions.renderNavigationPane", Title, NavigationItems, Name);
		}
	}
}